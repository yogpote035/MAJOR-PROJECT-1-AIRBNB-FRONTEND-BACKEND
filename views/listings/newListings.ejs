<%- include("../includes/layouts/boilerplate") %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-8 offset-2">
                <h1 class="text-center mb-4">Create a New Listings</h1>
                <form action="/listings" method="post" novalidate
                    class="bg-white p-4 rounded shadow-sm needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Enter Title</label>
                        <input type="text" name="listing[title]" required id="title" class="form-control"
                            placeholder="Enter listing title">
                        <div class="valid-feedback">
                            Title looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid Title.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Enter Description</label>
                        <textarea name="listing[description]" required id="description" class="form-control"
                            placeholder="Enter listing description" style="resize: none; height: 150px;"></textarea>
                        <div class="invalid-feedback">
                            Please provide a valid description.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" name="listing[image]" required id="image" class="form-control">
                        <div class="invalid-feedback">
                            Please provide a valid Image.
                        </div>
                        <div class="valid-feedback">
                            loking good </div>
                    </div>

                    <div class="mb-3">
                        <label for="price" class="form-label">Enter Price</label>
                        <input type="number" required name="listing[price]" id="price" class="form-control"
                            placeholder="Enter price" style="appearance: textfield;">
                        <div class="invalid-feedback">
                            Please provide a valid Price.
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="location" class="form-label">Enter Location</label>
                            <input type="text" required name="listing[location]" id="location" class="form-control"
                                placeholder="Enter location">
                            <div class="invalid-feedback">
                                Please provide a valid location.
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="country" class="form-label">Enter Country</label>
                            <input type="text" required name="listing[country]" id="country" class="form-control"
                                placeholder="Enter country">
                            <div class="invalid-feedback">
                                Please provide a valid country.
                            </div>
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <%- include("../includes/footer") %>

        </body>

        </html>